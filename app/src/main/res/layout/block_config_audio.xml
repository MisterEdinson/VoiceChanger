        android:text="10"
        android:textColor="#B3FFFFFF"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="@+id/sbTreable"
        app:layout_constraintTop_toBottomOf="@+id/sbTreable" />

    <TextView
        android:id="@+id/tvResetParam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="24dp"
        android:text="Сбросить параметры"
        android:textColor="#B3FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tvTempo"
        app:layout_constraintTop_toBottomOf="@+id/tvMinTreable" />

