    <TextView
        android:id="@+id/tvTreable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Treable"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="@+id/tvPitch"
        app:layout_constraintTop_toBottomOf="@+id/view10" />

    <SeekBar
        android:id="@+id/sbTreable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:progress="10"
        android:progressBackgroundTint="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/sbPitch"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTreable" />

    <TextView
        android:id="@+id/tvMinTreable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
