    <TextView
        android:id="@+id/tvMaxPitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="16dp"
        android:text="10"
        android:textColor="#B3FFFFFF"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="@+id/sbPitch"
        app:layout_constraintTop_toBottomOf="@+id/sbPitch" />

    <View
        android:id="@+id/view6"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/bg_view_row"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvMinPitch" />

    <TextView
        android:id="@+id/tvTempo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Tempo"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="@+id/tvPitch"
        app:layout_constraintTop_toBottomOf="@+id/view6" />

    <SeekBar
        android:id="@+id/sbTempo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
