<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="SplashTheme" parent="Theme.VoiceChanger">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <style name="ProgressBarStyle" parent="android:Widget.ProgressBar.Horizontal">
        <item name="android:indeterminate">false</item>
        <item name="android:minHeight">4dp</item>
        <item name="android:maxHeight">4dp</item>
        <item name="android:progressDrawable">@drawable/color_preloader</item>
    </style>
    
    <style name="GreenButton">
        <item name="colorAccent">@drawable/green_color</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">24sp</item>
        <item name="android:radius">12dp</item>
    </style>
</resources>